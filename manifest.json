{
    "manifest_version": 3,
    "name": "Chrome Regular Expressions",
    "version": "1.0",
    "description": "This is an extension built to increase functionality of the ctrl+f shortcut in google chrome.",
    "permissions": [
        "activeTab",
        "notifications",
        "declarativeContent"
    ],
    "content_scripts": [
        {
            "matches": ["*://*/*", "https://*/"],
            "js": ["domManip.js", "picManip.js"],
            "css": ["myStyles.css"]
        }
    ],
    "background":{
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "regex.png",
            "24": "regex.png",
            "32": "regex.png"
        },
        "default_title": "Regular Expressions",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "regex.png",
        "48": "regex.png",
        "128": "regex.png"
    },
    "commands":{
        "_execute_action":{
            "suggested_key": {
                "default": "Ctrl+Shift+F"
            }
        }
    }
}